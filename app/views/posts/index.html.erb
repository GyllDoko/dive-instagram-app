<h1>Posts</h1>
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @posts.each do |post| %>
  <div class="col">
    <div class="card">
      <div class="card-header">
        <%if post.user.image.url%> <%= image_tag post.user.image.url, class: "",
        width: "50px"%>
        <span class="float-end"><%= post.user.name.upcase %></span>
        <%else%>
        <p></p>
        <%end%>
      </div>
      <div class="card-body">
        <%= image_tag post.image.url, class: "card-img-top", height: "300px" %>

        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content %></p>
      </div>
      <div class="card-footer clearfix">
        <small class="text-muted" style="float: right"
          ><%= post.created_at %></small
        >
        <p><%= link_to 'Show', post, class: "btn btn-primary text-light" %></p>
        <%if post.user==current_user %>
        <p class="text-center d-block ">
           <%= link_to 'Edit',
          edit_post_path(post), class: "btn btn-warning text-dark" %>
        </p>
        <p>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you
          sure?' }, class: "btn btn-danger text-light" %>
        </p>
        <% else %>
        <p></p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
